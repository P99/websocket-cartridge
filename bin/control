#!/bin/bash

PATH=/bin/:$OPENSHIFT_WS_DIR/usr/sbin/:$PATH

source $OPENSHIFT_CARTRIDGE_SDK_BASH

echo -e "[OpenShift] [websocket-cartridge] control - $1\n" >> logs/socat_log

function start {
    echo -e "socat TCP-L:$OPENSHIFT_WS_PORT,bind=$OPENSHIFT_WS_IP,reuseaddr,fork TCP:$OPENSHIFT_WS_IP:8000\n" >> logs/socat_log
    socat TCP-L:$OPENSHIFT_WS_PORT,bind=$OPENSHIFT_WS_IP,reuseaddr,fork TCP:$OPENSHIFT_WS_IP:8000 >> logs/socat_log 2>&1 &
}

function stop {
    echo -e "killall socat\n" >> logs/socat_log
    killall socat >> logs/socat_log 2>&1
}

function restart {
    echo -e "killall socat\n" >> logs/socat_log
    killall socat >> logs/socat_log 2>&1
    echo -e "socat TCP-L:$OPENSHIFT_WS_PORT,bind=$OPENSHIFT_WS_IP,reuseaddr,fork TCP:$OPENSHIFT_WS_IP:8000\n" >> logs/socat_log
    socat TCP-L:$OPENSHIFT_WS_PORT,bind=$OPENSHIFT_WS_IP,reuseaddr,fork TCP:$OPENSHIFT_WS_IP:8000 >> logs/socat_log 2>&1 &
}

function test {
    echo -e "Begin test\n" >> logs/socat_log
    echo -e "PATH=$PATH\n" >> logs/socat_log
    echo -e "Socat can run?\n" >> logs/socat_log
    socat -h >> logs/socat_log 2>&1
    echo -e "End test\n" >> logs/socat_log
}

function catchall {
    echo -e "not yet implemented\n" >> logs/socat_log
}

function tidy {
    echo -e "Tidy\n" > logs/socat_log
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      test ;;
  reload)      catchall ;;
  tidy)        tidy ;;
  pre-build)   catchall ;;
  build)       catchall ;;
  deploy)      catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0


